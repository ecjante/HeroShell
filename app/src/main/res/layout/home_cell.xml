<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/home_cell_index_text"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/secondaryTextColor"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/home_cell_primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/home_cell_index_text"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/mainTextColor"/>

    <TextView
        android:id="@+id/home_cell_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/home_cell_primary_text"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/secondaryTextColor"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>
